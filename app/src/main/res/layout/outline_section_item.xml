<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <EditText
        android:id="@+id/section_title_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Section Title"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="@color/md_theme_light_onSurface"
        android:textColorHint="@color/md_theme_light_onSurfaceVariant"
        android:background="@drawable/rounded_edittext_outline_background"
        android:padding="10dp"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/edit_section_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_edit_round"
        android:tint="@color/md_theme_light_onSurfaceVariant"
        android:contentDescription="Edit section"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <ImageView
        android:id="@+id/delete_section_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_delete_round"
        android:tint="@color/md_theme_light_error"
        android:contentDescription="Delete section"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless" />

</LinearLayout>