<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="start"
    android:paddingBottom="8dp">

    <!-- Thinking content -->
    <TextView
        android:id="@+id/thinking_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textSize="11sp"
        android:textColor="@color/md_theme_light_onSurfaceVariant"
        android:fontFamily="@font/reg"
        android:lineSpacingExtra="2dp"
        android:visibility="gone"
        android:background="@drawable/thinking_background"
        android:padding="8dp" />

    <!-- Web search content -->
    <TextView
        android:id="@+id/web_search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textSize="11sp"
        android:textColor="@color/md_theme_light_onSurfaceVariant"
        android:fontFamily="@font/reg"
        android:lineSpacingExtra="2dp"
        android:visibility="gone"
        android:background="@drawable/web_search_background"
        android:padding="8dp" />

    <!-- Main AI response -->
    <TextView
        android:id="@+id/ai_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ai_message_background"
        android:padding="16dp"
        android:textColor="@color/md_theme_light_onSurfaceVariant"
        android:textSize="13sp"
        android:fontFamily="@font/reg"
        android:lineSpacingExtra="2dp"
        android:maxWidth="280dp" />

</LinearLayout>