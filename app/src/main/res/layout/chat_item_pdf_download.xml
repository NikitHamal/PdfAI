<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="start"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/pdf_intro_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="@color/md_theme_light_onSurface"
        android:background="@drawable/ai_message_background"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        android:text="Here's a comprehensive PDF on 'The Future of Artificial Intelligence':" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/md_theme_light_surfaceContainerHigh"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/pdf_download_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_description_round"
                android:tint="@color/md_theme_light_primary"
                android:contentDescription="PDF icon" />

            <TextView
                android:id="@+id/pdf_file_name_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="AI_Report_2024.pdf"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/md_theme_light_onSurface" />

            <ImageView
                android:id="@+id/download_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_download_round"
                android:tint="@color/md_theme_light_primary"
                android:contentDescription="Download PDF"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>